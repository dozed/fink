

.row
	.span12
		a(href="#/galleries") back

.row
	.span8
		h2 Create gallery
		
		form.form-horizontal
			fieldset
				legend Fill in your stuff

				.control-group
					label.control-label(for="title") Title
					.controls
						input#title.input-xlarge(type="text")

				.control-group
					label.control-label(for="tags") Tags
					.controls
						ul#tags

				.control-group
					label.control-label(for="text") Text
					.controls
						textarea#text(style="width: 370px; height: 100px")

				.control-group
					label.control-label(for="images") images
					.controls
						p Images

				.form-actions
					input.btn.btn-ok.btn-primary(type="submit") Create gallery
					span
					button.btn.btn-cancel Cancel
