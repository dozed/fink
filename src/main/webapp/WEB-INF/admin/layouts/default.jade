- import fink.support.TemplateHelper._
- response.setContentType("text/html")

-@ var body: String
-@ var title : String = "fink admin"

html(lang="en" ng-app="fink-admin")
  head
    meta(charset="utf-8")
    title
      =title

    link(rel="stylesheet" type="text/css" href="lib/bootstrap/bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css")
    link(rel="stylesheet" type="text/css" href="lib/jquery/jquery.tagit.css")
    link(rel="stylesheet" type="text/css" href="lib/uploadify-3.1.1/uploadify.css")

    link(rel="stylesheet" type="text/css" href="css/site.css")

    script(type="text/javascript" src="lib/underscore/underscore-1.3.3.min.js")
    script(type="text/javascript" src="lib/jquery/jquery-1.7.2.js")
    script(type="text/javascript" src="lib/jquery/jquery-ui-1.8.16.custom.min.js")
    script(type="text/javascript" src="lib/uploadify-3.1.1/jquery.uploadify-3.1.js")
    script(type="text/javascript" src="lib/jquery/jquery.tagit.js")
    script(type="text/javascript" src="lib/angular/angular.js")
    script(type="text/javascript" src="lib/angular/angular-resource.js")
    script(type="text/javascript" src="lib/bootstrap/bootstrap.js")
    script(type="text/javascript" src="lib/bootbox/bootbox.js")

    script(type="text/javascript" src="js/app.js")
    script(type="text/javascript" src="js/services.js")
    script(type="text/javascript" src="js/controllers.js")
    script(type="text/javascript" src="js/filters.js")
    script(type="text/javascript" src="js/directives.js")

  body

    .sidebar
      h4 CONTENT
      ul(class="menu")
      li
        a.pages(href="#/pages") pages
      li
        a.posts(href="#/posts") posts
      li
        a.albums(href="#/galleries") galleries
    .content-wrap
      .header
      .content
        .container(ng-view)


