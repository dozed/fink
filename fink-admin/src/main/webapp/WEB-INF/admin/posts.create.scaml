- import org.noorg.fink.admin.support.Theming._

:!javascript
  var _isEditing = false;
  function setEditMode(isEditing) {
    _isEditing = isEditing;

    $("#editor").fresheditor("edit", _isEditing);

    $("#saveButton, #discardButton, #editor-toolbar").toggle(_isEditing);
    $("#editButton").toggle(!_isEditing);
  }

  $(document).ready(function() {
    $("select, input:text, textarea, input:checkbox, input:radio, input:file").uniform();
    
    $('#next').click(function() {
      $('#report').submit();
    });

    $('#editor').fresheditor();
    $('#editor').fresheditor("edit", true);
    $('#title').focus();
    
