    $("input#save").click(function() {
      var text = $("#editor").html();
      $("#text").val(text);
      $("form#post-form").submit();
    });
  });


%form(method="post" id="post-form" action={adminBase("/posts/create")})
  %input(type="hidden" name="text" id="text" value="")
  %p(style="margin-bottom: 1em; font-size: 13px")
    Titel:
    %input(type="text" id="title" name="title" size="50")
    
  %p(style="margin-bottom: 1em; font-size: 13px")
    Autor:
    %input(type="text" size="50" name="author" value="whatsoever")

  %p(style="margin-bottom: 1em; font-size: 13px")
    Kategorie:
    %select(name="category")
      %option(value="dates") Upcoming Dates
      %option(value="downloads") Downloads
      %option(value="interviews") Young, gifted and baaad!
      %option(value="misc") Miscellaneous

  %p(style="margin-bottom: 1em; font-size: 13px")
    Tags:
    %input(type="text" name="tags" size="50")

  #editor-toolbar(class="fresheditor-toolbar")
    #toolbarPosition(class="clear")

    .buttons
      %ul.toolbarSection
        %li
          %a(href="#" class="toolbar_bold" title="Bold (Ctrl+B)") B
        %li
          %a(href="#" class="toolbar_italic" title="Italicize (Ctrl+I)") I
        %li
          %a(href="#" class="toolbar_underline" title="Underline (Ctrl+U)") U
        %li
          %a(href="#" title="Remove Formating (Ctrl+M)" class="toolbar_remove") &minus;

      %ul.toolbarSection
        %li
          %a(href="#" title="Link to a web page (Ctrl+L)" class="toolbar_link") @
        %li
          %a(href="#" title="Image (Ctrl+G)" class="toolbar_image") &nbsp;
        %li
          %a(href="#" title="Blockquote (Ctrl+Q)" class="toolbar_blockquote") &nbsp;
        %li
          %a(href="#" title="Code (Ctrl+Alt+K)" class="toolbar_code") {&nbsp;}

      %ul.toolbarSection
        %li
          %a(href="#" title="Unordered List (Ctrl+Alt+U)" class="toolbar_ul") &nbsp;
        %li
          %a(href="#" title="Ordered List (Ctrl+Alt+O)" class="toolbar_ol") &nbsp;
        %li
          %a(href="#" title="Superscript (Ctrl+. [period])" class="toolbar_sup")
            x
            %sup 2
        %li
          %a(href="#" title="Subscript (Ctrl+Shift+.)" class="toolbar_sub")
            x
            %sub 2

      %ul.toolbarSection
        %li
          %a(href="#" title="Paragraph (Ctrl+Alt+0)" class="toolbar_p") P
        %li
          %a(href="#" title="Heading 1 (Ctrl+Alt+1)" class="toolbar_h1") H1
        %li
          %a(href="#" title="Heading 2 (Ctrl+Alt+2)" class="toolbar_h2") H2
        %li
          %a(href="#" title="Heading 3 (Ctrl+Alt+3)" class="toolbar_h3") H3
        %li
          %a(href="#" title="Heading 4 (Ctrl+Alt+1)" class="toolbar_h4") H4
          -# %sub 4
        %li
          %a(href="#" title="Heading 5 (Ctrl+Alt+5)" class="toolbar_h5") H5


  #editor(class="fresheditable" style="clear: both" spellcheck="false")
