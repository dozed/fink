
-@ var body: String
-@ var title : String = "fink Admin"
- response.setContentType("text/html")

-# Only include the console if it's available and the engine is in dev mode.
-# val include_console = engine.isDevelopmentMode && engine.resourceLoader.exists("/org/fusesource/scalate/console/console_head.scaml")
- val include_console = false

!!! Basic
%html(lang="en")
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")

    %meta(name="description" content="description goes here")
    %meta(name="keywords" content="keywords,goes,here")
    %meta(name="author" content="Your Name")

    - if (include_console)
      = include("/org/fusesource/scalate/console/console_head.scaml")

    %link(href={uri("/css/admin.css")} rel="stylesheet" type="text/css")
    %link(href="http://fonts.googleapis.com/css?family=Mako|Anton|News+Cycle|Nobile&v2" rel="stylesheet" type="text/css")

    %script(type="text/javascript" src={uri("/js/jquery-1.5.1.min.js")})
    %script(type="text/javascript" src={uri("/js/jquery.simplemodal-1.4.1.js")})

    %link(href={uri("/css/uniform.press.css")} rel="stylesheet" type="text/css")
    %script(type="text/javascript" src={uri("/js/jquery.uniform.min.js")})

    %link(href={uri("/css/jquery.lightbox-0.5.css")} rel="stylesheet" type="text/css")
    %script(type="text/javascript" src={uri("/js/jquery.lightbox-0.5.js")})

    %link(href={uri("/css/jquery.contenteditable.css")} rel="stylesheet" type="text/css")
    %script(type="text/javascript" src={uri("/js/shortcut.js")})
    %script(type="text/javascript" src={uri("/js/sanitize.js")})
    %script(type="text/javascript" src={uri("/js/jquery.contenteditable.js")})
    
    %script(type="text/javascript" src={uri("/js/jquery.ba-bbq.js")})

    -#
      %link(href={uri("/uploadify-2.1.4/uploadify.css")} rel="stylesheet" type="text/css")
      %script(type="text/javascript" src={uri("/uploadify-2.1.4/swfobject.js")})
      %script(type="text/javascript" src={uri("/uploadify-2.1.4/jquery.uploadify.v2.1.4.min.js")})
    %link(href={uri("/assets/uploadify-3.0.0-beta/uploadify.css")} rel="stylesheet" type="text/css")
    %script(type="text/javascript" src={uri("/assets/uploadify-3.0.0-beta/swfobject.js")})
    %script(type="text/javascript" src={uri("/assets/uploadify-3.0.0-beta/jquery.uploadify.js")})

    %link(href={uri("/assets/jquery-tags-input/jquery.tagsinput.css")} rel="stylesheet" type="text/css")
    %script(type="text/javascript" src={uri("/assets/jquery-tags-input/jquery.tagsinput.js")})

    %script(type="text/javascript")
      var BASE = "#{uri("/")}";
      var ADMIN = "#{uri("/admin/")}";

    - if (include_console)
      %link(href={uri("/css/scalate/console.css")} rel="stylesheet" type="text/css")

    %title
      = title
  
  %body
    #navigation
      .wrapper
        %ul
          %li
            %a(href={uri("/admin/pages")}) pages
          %li
            %a(href={uri("/admin/posts")}) posts
          %li
            %a(href={uri("/admin/images")}) images
          %li
            %a(href={uri("/admin/collections")}) collections
          %li
            %a(href={uri("/admin/configuration")}) config
            
        %div(style="clear:both")

    #content
      .wrapper
        !~~ body
    
    #footer
      .wrapper
        %br
        - if (include_console)
          = include("/org/fusesource/scalate/console/console.scaml")
        
